{
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"react",
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"settings": {
		"react": {
		"version": "detect"
		}
	},
	"rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", "tab"],
    "comma-dangle": ["error", "only-multiline"]
	}
}
